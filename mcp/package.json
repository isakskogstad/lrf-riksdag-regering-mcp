{
  "name": "lrf-riksdag-regering-mcp",
  "version": "3.0.0",
  "mcpName": "io.lrf/lrf-riksdag-regering-mcp",
  "description": "LRF Riksdag & Regering - M365 Copilot-kompatibel MCP server för att hämta, söka, analysera och jämföra data från Riksdagen och Regeringskansliet. StreamableHTTP transport. 27 verktyg och 5 resources.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "lrf-riksdag-regering-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "node scripts/embed-readme.js && tsc && npm run copy-assets && chmod +x dist/index.js",
    "copy-assets": "mkdir -p dist/data && cp -f src/data/*.md dist/data/ 2>/dev/null || true",
    "dev": "tsx src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:stdio": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linter configured yet'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "mcp",
    "riksdagen",
    "regeringen",
    "swedish-government",
    "parliament",
    "model-context-protocol",
    "remote-mcp-server",
    "m365-copilot",
    "microsoft-copilot",
    "streamable-http"
  ],
  "author": "LRF",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "node-cache": "^5.1.2",
    "node-fetch": "3.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.16.5",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
